# Copy to .env and fill in real values
DATABASE_URL=postgres://user:password@localhost:5432/windturbine
# Set to true if your Postgres requires SSL (e.g., many cloud providers)
PGSSL=false
# Comma-separated allowed origins for CORS (leave empty to allow all in dev)
CORS_ORIGIN=
# Port for the API server
PORT=4000

# SMTP settings (for email notifications)
SMTP_HOST=smtp.ionos.fr
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=
SMTP_PASS=
SMTP_FROM="Wind Tracker"

# Notification recipients mapping by site/power_plant.
# JSON object: { "SAGE": "ops@example.com, hse@example.com", "OTHER": "team@example.com" }
NOTIFY_MATRIX={}

# Alert recipients for DDoS/rate-limit events (comma-separated)
ALERT_RECIPIENTS=edoardo.genissel@example.com
